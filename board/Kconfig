		menuconfig BSP_USING_UART
			bool "Enable UART"
			select RT_USING_SERIAL	
			default y        	
			if BSP_USING_UART
				config BSP_USING_UART0
					bool "Enable UART0"
					default y
					if BSP_USING_UART0
