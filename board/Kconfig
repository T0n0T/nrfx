					default n
				config BSP_USING_TIM2
					bool "Enable TIMER2"
					default n
				config BSP_USING_TIM3
					bool "Enable TIMER3"
					default n
				config BSP_USING_TIM4
					bool "Enable TIMER4"
					default n
			endif
	endmenu

	choice
	prompt "BLE STACK"
	default BLE_STACK_USING_NULL
	help
		Select the ble stack

	config BLE_STACK_USING_NULL
		bool "not use the ble stack"

	config  BSP_USING_SOFTDEVICE
		select PKG_USING_NRF5X_SDK
		bool "Nordic softdevice(perpheral)"

	config BSP_USING_NIMBLE
		select PKG_USING_NIMBLE
		select PKG_NIMBLE_BSP_NRF52840
		bool "use nimble stack(iot)"
	endchoice


	choice
	prompt "USING_NRF_DRIVER"
	default USING_RT_DRIVER
	help
		Select the DRIVER IF

	config USING_RT_DRIVER
		bool "using rtthread driver"

	config USING_NRF_DRIVER
		select USINGC_NRF_DRIVER
		bool "use nrf_sdk driver"
	endchoice

	choice
	prompt "USING_NRF_LOG"
	default USING_NONE
	help
		Select the LOG MODULE

	config USING_NONE
		bool "using no log"

	config USING_NRF_LOG
		select USING_NRF_LOG
		bool "use nrf_log module"
		if USING_NRF_LOG
			config USING_NRF_LOG_BACKEND_FLASH
				bool "Enable Flash storage logs"
				default n
			config USING_NRF_LOG_BACKEND_RTT
				bool "Enable RTT print logs"
				default n
			config USING_NRF_LOG_BACKEND_RT_SERIAL
				bool "Enable rtthread serial logs"
				default n
		endif
	endchoice

endmenu

