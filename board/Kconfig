							int "uart0 rx pin number"
							range 0 31
							default 8
						config BSP_UART0_TX_PIN
							int "uart0 tx pin number"
							range 0 31
							default 6
					endif
			endif
		menuconfig BSP_USING_UARTE
			bool "Enable UARTE"
			select RT_USING_SERIAL	
			select RT_SERIAL_USING_DMA
			default n        	
			if BSP_USING_UARTE
